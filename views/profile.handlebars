<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New concert:</h3>

    <form class="form new-concert-form">
      <div class="form-group">
        <label for="concert-name">concert name:</label>
        <input class="form-input" type="text" id="concert-name" name="concert-name" />
      </div>
      <div class="form-group">
        <label for="concert-funding">needed funding ($):</label>
        <input class="form-input" type="number" id="concert-funding" name="concert-funding" />
      </div>
      <div class="form-group">
        <label for="concert-desc">description:</label>
        <textarea class="form-input" id="concert-desc" name="concert-desc"></textarea>
      </div>
      <div class="form-group">
        <button id="create-button" type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if concerts.length}}
  <div class="col-md-6 concert-list">
    <h3>Current concerts:</h3>

    {{#each concerts as |concert|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/concert/{{concert.id}}">{{concert.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{concert.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
